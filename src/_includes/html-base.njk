---
title: html-base
---

<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8">
    <title></title>
    <meta name="description" content="{{ site.summary }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta property="og:site_name" content="{{ site.name }}">
    <meta property="og:title" content="{{ site.summary }}">
    <meta property="og:type" content="{{ site.type }}">
    <meta property="og:url" content="{{ site.url.home.link }}">
    <meta property="og:description" content="{{ site.summary }}">
    <meta property="og:image" content="{{ site.url.image }}">
    <meta property="og:image:alt" content="{{ site.url.image.description }}">

    <meta name="twitter:creator" content="{{ site.handle.twitter}}">
    <meta name="twitter:description" content="{{ site.summary }}">
    <meta name="twitter:image" content="{{ site.url.image }}">
    <meta name="twitter:image:alt" content="{{ site.url.image.description }}">
    <meta name="twitter:card" content="summary">

    <link rel="manifest" href="site.webmanifest">
    <!-- Place favicon.ico in the root directory -->

    <link rel="alternate" type="application/rss+xml" title="{{ site.url.feed.description }}" href="{{ site.url.feed.link }}">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Sans:400,700&display=swap"></link>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Playfair+Display&display=swap"></link>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300i,700&display=swap"></link>

    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/styles.css">

    <meta name="theme-color" content="#fafafa">
  </head>

  <body>
    <div class="wrapper">
      <div class="switcher">
        <div>
          <div class="header__logo-wrapper">
            <a class="header__logo-link" href="/">
              {{ '/src/svg/logo.svg' | svgContents | safe }}
              <h1 class="h__base header__title">
                <span class="header__title-line-1">Between</span>
                <span class="header__title-line-2">Two Parens</span>
              </h1>
            </a>
          </div>

          <div class="switcher header__main-content">
            <div>
              <div class="header__tagline">
                <div class="header__tagline">
                  <p class="h__base header__tagline-text">A blog about life between two parens</p>
                  <span class="header__tagline-divider"></span>
                </div>
              </div>
              <nav class="header__nav">
                <ul class="ul header__nav-list">
                  {%- for navItem in site.navItems -%}
                    <li class="header__nav-item {% if navItem.isIconLink == false %} header__nav-item-text {% endif %}">
                      <a href="/" target="" rel="nofollow noopener">
                        {% if navItem.isIconLink %}
                          {{ navItem.iconPath | svgContents | safe }}
                        {% else %}
                          {{ navItem.title }}
                        {% endif %}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{ content | safe }}

  </body>
</html>
